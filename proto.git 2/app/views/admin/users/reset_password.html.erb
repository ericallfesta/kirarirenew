<%= render 'admin/shared/breadcrumb', url_list: {'TOP' => admin_root_url, current_user.display_name => [:admin, current_user], 'パスワード変更' => nil} %>
<%= form_for current_user, url: [:update_password, :admin, current_user], html: { role: :form, class: 'form-horizontal' } do |user| %>
  <%= render 'admin/shared/form_errors', model: current_user %>

  <fieldset>
    <div class="form-group">
      <%= user.label :new_password, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= user.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= user.label :password_confirmation, class: "col-sm-3 control-label" %>
      <div class="col-sm-9">
        <%= user.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= user.submit class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </fieldset>
<% end %>
