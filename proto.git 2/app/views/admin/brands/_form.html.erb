<%= form_for @brand, url: [:admin, @brand], html: { class: 'form-horizontal' } do |f| %>
  <%= render 'admin/shared/form_errors', model: @brand %>
  <fieldset>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :name, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <label class="col-sm-3 control-label">カナ</label>
      <div class="col-sm-9">
        <%= f.text_field :kana, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <div class="checkbox">
          <label>
            <%= f.check_box :display_kana %>
            カナを表示する
          </label>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_area :description, class: 'form-control', rows: 10 %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :hero_image, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= render 'admin/shared/image_form', f: f, image_name: 'hero_image' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= render 'admin/shared/image_form', f: f, image_name: 'image' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :website, class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <%= f.text_field :website, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-9 col-sm-offset-3">
        <%= f.submit class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </fieldset>
<% end %>
