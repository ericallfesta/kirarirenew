<%= form_for efficacy, url: (efficacy.new_record? && category.present?) ? admin_tag_efficacies_url(category) : admin_efficacy_url(efficacy), html: { class: 'form' } do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
