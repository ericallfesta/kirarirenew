<%= render 'admin/shared/breadcrumb', url_list: {
  'TOP' => admin_root_url,
  'メール' => nil,
} %>

<%= form_for @contact, url: confirm_admin_contacts_url, html: { role: :form, class: 'form-horizontal' } do |f| %>
  <%= render 'admin/shared/form_errors', model: @contact %>
  <div class="form-group">
    <label class="col-sm-2 control-label">メールアドレス</label>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :to_all %> ユーザ全員に送信する
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <%= f.check_box :to_admin %> 管理者のみに送信する
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">タイトル</label>
    <div class="col-sm-10">
      <%= f.text_field :subject, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">本文</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: 'form-control', rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit '確認', class: 'btn btn-primary btn-block' %>
    </div>
  </div>
<% end %>
