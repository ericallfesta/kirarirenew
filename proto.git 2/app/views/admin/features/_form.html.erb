<%= form_for [:admin, @feature], html: { role: :form, class: 'form-horizontal' } do |f| %>
  <%= render 'admin/shared/form_errors', model: @feature %>

  <fieldset>
    <div class="form-group">
      <%= f.label :title, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= f.text_field :title, { class: 'form-control' } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :description, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= f.text_area :description, { class: 'form-control', rows: 6 } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :priority, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9 row">
        <div class="col-sm-4">
          <%= f.number_field :priority, { class: 'form-control' } %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :url, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= f.text_field :url, { class: 'form-control' } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :hero_image, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= render 'admin/shared/image_form', f: f, image_name: 'hero_image' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :sidebar_image, { class: 'col-sm-3 control-label' } %>
      <div class="col-sm-9">
        <%= render 'admin/shared/image_form', f: f, image_name: 'sidebar_image' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <div class="checkbox">
          <label>
            <%= f.check_box :active %>
            <%= f.label :active %>
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit class: 'btn btn-primary btn-block' %>
      </div>
    </div>
  </fieldset>
<% end %>
