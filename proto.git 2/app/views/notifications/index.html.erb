<section class="mass-container" id="notifications-panel">
  <header>
    <h1><%=t 'views.notifications' %></h1>
  </header>
  <% @notifications.each do |key, list| %>
    <div class="content-panel">
      <h2><time><%= l list[0].created_at.to_date %></time></h2>
      <ul class="notifications-list">
        <% list.each do |notification| %>
          <%= render 'notifications/item', notification: notification %>
        <% end %>
      </ul>
    </div>
  <% end %>
</section>
